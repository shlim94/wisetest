  <!-- Placeholder filter configuration for WiseMetaDashboard filter -->
  <filter>
    <filter-name>DashboardFilter</filter-name>
    <filter-class>com.wise.common.web.filter.DelegatingBeanFilter</filter-class>
    <init-param>
      <param-name>beanName</param-name>
      <param-value>dashboardFilterBean</param-value>
    </init-param>
    <init-param>
      <param-name>filterPath</param-name>
      <param-value>/dashboard</param-value>
    </init-param>
    <init-param>
      <param-name>prefixExcludes</param-name>
      <param-value>/api/</param-value>
    </init-param>
    <init-param>
      <param-name>fileResourceExtensions</param-name>
      <param-value>css, js, png, jpg, jpeg, gif</param-value>
    </init-param>
    <init-param>
      <param-name>defaultUserLocale</param-name>
      <param-value>ko</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>DashboardFilter</filter-name>
    <url-pattern>/dashboard/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>INCLUDE</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>

	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>wise.ds.root</param-value>
	</context-param>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/WEB-INF/config/log4j.xml</param-value>
	</context-param>
	<context-param>
		<param-name>log4jRefreshInterval</param-name>
		<param-value>1000</param-value>
	</context-param>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/config/spring/root-context.xml
			/WEB-INF/config/spring/db-context.xml
			/WEB-INF/config/spring/security-context.xml
			/WEB-INF/config/spring/dashboard-*.xml
		</param-value>
	</context-param>

	<context-param>
		<param-name>applicationContextConfigLocation</param-name>
		<param-value>/WEB-INF/config/web-application.xml</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.wise.context.config.ApplicationContextListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
<!-- 	<listener>
		<listener-class>com.wise.authn.WiseSessionListener</listener-class>
	</listener> -->
	<listener>
		<listener-class>org.springframework.security.web.session.HttpSessionEventPublisher</listener-class>
	</listener>

	<servlet>
		<servlet-name>actionServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/config/spring/servlet-context.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>actionServlet</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>actionServlet</servlet-name>
		<url-pattern>/js/WISE.i18n.js</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>actionServlet</servlet-name>
		<url-pattern>/js/WISE.common.js</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>actionServlet</servlet-name>
		<url-pattern>/css/WISE.custom.css</url-pattern>
	</servlet-mapping>

  <!-- Placeholder filter configuration for WiseMetaDashboard api servlet -->
  <servlet>
    <servlet-name>DashboardApiServlet</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <!-- Load from the ContextLoaderListener -->
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value></param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>DashboardApiServlet</servlet-name>
    <url-pattern>/dashboard/api/*</url-pattern>
  </servlet-mapping>

	<session-config>
		<session-timeout>120</session-timeout>
		<cookie-config>
			<name>OLAPSESSION</name>
		</cookie-config>
	</session-config>

	<error-page>
		<error-code>404</error-code>
		<location>/error/404.do</location>
	</error-page>
	<error-page>
		<error-code>405</error-code>
		<location>/error/invalid/request.do</location>
	</error-page>
	<error-page>
		<exception-type>com.wise.common.exception.InvalidAccessException</exception-type>
		<location>/error/invalid/request.do</location>
	</error-page>

	<welcome-file-list>
    	<welcome-file>index.html</welcome-file>
  	</welcome-file-list>
</web-app>