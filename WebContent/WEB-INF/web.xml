<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<filter>
		<filter-name>WDCServletFilter</filter-name>
		<filter-class>com.wise.common.web.filter.WDCServletFilter</filter-class>
		<init-param>
			<param-name>enabled</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>thresholdMillis</param-name>
			<param-value>10000</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>WDCServletFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>GenericDataResourceFilter</filter-name>
		<filter-class>com.wise.common.web.filter.GenericDataResourceFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>GenericDataResourceFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>URIAccessFilter</filter-name>
		<filter-class>com.wise.common.web.filter.URIAccessFilter</filter-class>
		<init-param>
			<param-name>mode</param-name>
			<param-value>bypass</param-value>
		</init-param>
		<init-param>
			<param-name>targets</param-name>
			<param-value>jsp, JSP</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>URIAccessFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>LoginFilter</filter-name>
		<filter-class>com.wise.ds.filter.LoginFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LoginFilter</filter-name>
		<url-pattern>/report/*</url-pattern>
	</filter-mapping>
	<filter>
        <filter-name>GZipServletFilter</filter-name>
        <filter-class>com.wise.common.web.filter.GZipServletFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>GZipServletFilter</filter-name>
        <url-pattern>/report/sqlLike.do</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>GZipServletFilter</filter-name>
        <url-pattern>/report/remoteRenderPivotGrid.do</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>GZipServletFilter</filter-name>
        <url-pattern>/report/pivotSummaryMatrix.do</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>GZipServletFilter</filter-name>
        <url-pattern>/download/downloadFile.do</url-pattern>
    </filter-mapping>
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- filter>
		<filter-name>csrfFilter</filter-name>
		<filter-class>com.wise.common.csrf.CsrfTokenAdder</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>csrfFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping -->
	
